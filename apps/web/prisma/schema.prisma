generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id String @id @default(uuid())
    email String @unique
    username String @db.VarChar(255)
    photo String? @default("")
    password String
    verified Boolean @default(false)
    createdAt DateTime @default(now())
}